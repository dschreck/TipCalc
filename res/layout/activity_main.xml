<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnDef15"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDef10"
        android:layout_toRightOf="@+id/btnDef10"
        android:text="15%" />

    <Button
        android:id="@+id/btnDef20"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDef15"
        android:layout_toRightOf="@+id/btnDef15"
        android:text="20%" />

    <Button
        android:id="@+id/btnDef10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etGrossAmount"
        android:layout_below="@+id/etGrossAmount"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="98dp"
        android:text="10%" />

    <EditText
        android:id="@+id/etOtherPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDef20"
        android:layout_alignRight="@+id/etGrossAmount"
        android:layout_below="@+id/btnDef20"
        android:digits="0123456789."
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <Button
        android:id="@+id/btnOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etOtherPerc"
        android:layout_alignLeft="@+id/btnDef10"
        android:layout_alignRight="@+id/btnDef15"
        android:layout_below="@+id/btnDef15"
        android:text="Other:" />

    <TextView
        android:id="@+id/tvTipIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOther"
        android:layout_marginTop="66dp"
        android:layout_toLeftOf="@+id/btnDef15"
        android:text="Tip is:" />

    <TextView
        android:id="@+id/tvTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvTipIs"
        android:layout_below="@+id/tvTipIs"
        android:layout_marginTop="14dp"
        android:text="$0.00" />

    <TextView
        android:id="@+id/tvGrossAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etGrossAmount"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Total:" />

    <EditText
        android:id="@+id/etGrossAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvGrossAmount"
        android:layout_marginLeft="15dp"
        android:digits="0123456789."
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0.00" />

</RelativeLayout>